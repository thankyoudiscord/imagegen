{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "lib/types"],
    "paths": {
      "imagegen": ["./lib"]
    }
  },
  "include": ["src/**/*.ts", "lib/**/*.ts"]
}
